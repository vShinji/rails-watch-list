<div class="container d-flex justify-content-center">
  <div class="card mt-3 text-center" style="width: 30rem;">
    <h1><%= @list.name %></h1>
    <%= link_to "Add bookmark", new_list_bookmark_path(@list.id), class:"btn btn-secondary btn-sm m-2" %>

    <div class="card-header">
    Bookmarks
    </div>

    <% @list.bookmarks.each do |bookmark| %>
      <ul class="list-group list-group-flush d-grid gap-2">
        <li class="list-group-item"><%= bookmark.movie.title %></li>
        <p class="d-flex ms-3">Comment:</p>
        <%= bookmark.comment %>
        <%= link_to "Delete",
          bookmark_path(bookmark),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"btn btn-secondary btn-sm m-2"
        %>
      </ul>
    <% end %>
  </div>
</div>
